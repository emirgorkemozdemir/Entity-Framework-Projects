<Window x:Class="Entity_FrameWork_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Entity_FrameWork_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="dg1" Height="250"/>
            <StackPanel Orientation="Vertical">
                <TextBox Width="250" Name="txtboxid" Margin="0,10,0,0" />
                <TextBox Width="250" Name="txtboxad" Margin="0,10,0,0" />
                <TextBox Width="250" Name="txtboxyazar" Margin="0,10,0,0" />
                <TextBox Width="250" Name="txtboxyayınevi" Margin="0,10,0,0" />

                <Button Click="btnadd_Click" Content="Ekle" x:Name="btnadd" Margin="0,10,0,0" Width="250" Height="35"/>
                <Button Click="btndelete_Click" Content="Sil" x:Name="btndelete" Margin="0,10,0,0" Width="250" Height="35"/>
                <Button Click="btnupdate_Click" Content="Güncelle" x:Name="btnupdate" Margin="0,10,0,0" Width="250" Height="35"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
